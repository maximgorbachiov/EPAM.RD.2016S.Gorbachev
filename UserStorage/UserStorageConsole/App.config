<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <configSections>
    <section name="ServicesSection" type="StorageConfigurator.ConfigSection.ServicesSection, StorageConfigurator"/>
    <section name="ServicesInfoSection" type="StorageConfigurator.ConfigSection.ServicesInfoSection, StorageConfigurator"/>
  </configSections>
  <ServicesSection>
    <Services>
      <Service port="10000" ipaddress="127.0.0.1" isMaster="true" hostaddress="http://localhost:8080/master" type="StorageLib.Storages.MasterService, Storage"/>
      <Service port="10001" ipaddress="127.0.0.1" isMaster="false" hostaddress="http://localhost:8081/slave1" type="StorageLib.Storages.SlaveService, Storage"/>
      <Service port="10002" ipaddress="127.0.0.1" isMaster="false" hostaddress="http://localhost:8082/slave2" type="StorageLib.Storages.SlaveService, Storage"/>
      <Service port="10003" ipaddress="127.0.0.1" isMaster="false" hostaddress="http://localhost:8083/slave3" type="StorageLib.Storages.SlaveService, Storage"/>
    </Services>
  </ServicesSection>
  <ServicesInfoSection>
    <Generator type="FibonachyGenerator.Generators.IdGenerator, FibonachyGenerator"/>
    <Repository type="StorageLib.Repositories.XMLRepository, Storage"/>
    <Validator type="StorageConfigurator.UserValidator, StorageConfigurator"/>
    <NetworkNotificator type="StorageLib.NetworkClients.NetworkNotificator, Storage"/>
    <NetworkUpdater type="StorageLib.NetworkClients.NetworkUpdater, Storage"/>
  </ServicesInfoSection>
    
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>

    <appSettings>
      <add key="fileName" value="userBase.xml" />
    </appSettings>
  
    <system.diagnostics>
        <trace autoflush="true"/>
        <sources>
          <source name="traceSource"
                  switchName="levelSwitch"
                  switchType="System.Diagnostics.SourceSwitch" >
            <listeners>            
              <!--<add name="textwriterListener"
                type="System.Diagnostics.TextWriterTraceListener"
                initializeData="logInfo.txt"
              traceOutputOptions="ProcessId, DateTime"/>
              <add name="xmlListener"
                type="System.Diagnostics.XmlWriterTraceListener"
                initializeData="logInfo.xml"
                traceOutputOptions="DateTime" />-->
              <add name="configConsoleListener"
               type="System.Diagnostics.ConsoleTraceListener" />
            </listeners>
          </source>
        </sources>
        <switches>
          <add name="boolSwitch" value="1"/>
          <add name="levelSwitch" value="Information" />
        </switches>
      </system.diagnostics>

</configuration>